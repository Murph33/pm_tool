<div class="well" id="<%= dom_id(task) %>">
  <h4><%= task.title %></h4>
  <p><%= task.description %></p>
  <p>Due: <%= formatted_date task.due_date %></p>
  <% status = task.done ? "Done" : "Not Done" %>
  <%= link_to status, project_task_path(@project,task, task: {done: !task.done}),
                                       method: :patch, remote: true  %> |
  <%= link_to "Edit", edit_project_task_path(@project, task), remote: true %> |
  <%= link_to "Delete", project_task_path(@project, task), method: :delete,
      remote: true, data: {confirm: "Are you sure you want to delete this task?"}%>

</div>
