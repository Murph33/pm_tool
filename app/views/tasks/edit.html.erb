<h1> Edit the Task?</h1>

<%# form_for([@project, @task], as url: edit_project_task_path(@task)) do |f| %>
<%= form_for [@project, @task] do |f| %>
  <div>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  <div>
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>
  <div>
    <%= f.label :due_date %>
    <%= f.datetime_select :due_date, start_year: Date.today.year %>
  </div>
  <%= f.submit %>

<% end %>
